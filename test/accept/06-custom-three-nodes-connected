CREATE NODE node1(
    TEXT("node1"),
    BORDER COLOR(RED),
    BACKGROUND(BLUE)
);

CREATE NODE node2(
    TEXT("node2"),
    BORDER COLOR(GREEN),
    BACKGROUND(BLUE),
    UNION(node1) LINE DOTTED 
);

CREATE NODE node3(
    TEXT("node3"),
    BORDER COLOR(PURPLE),
    BACKGROUND(PINK),
    UNION(node1) LINE STRONG 
);