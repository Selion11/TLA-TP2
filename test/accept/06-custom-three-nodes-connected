CREATE NODE node1(
    TEXT("node1"),
    BORDER COLOR(RED),
    BACKGROUND(BLUE)
);

CREATE NODE node2(
    TEXT("node2"),
    BORDER COLOR(GREEN),
    BACKGROUND(YELLOW),
    UNION(node1) WITH DOTTED LINE, RED
);

CREATE NODE node3(
    TEXT("node3"),
    BORDER COLOR(PURPLE),
    BACKGROUND(PINK),
    UNION(node1) WITH STRONG LINE, GREEN
);